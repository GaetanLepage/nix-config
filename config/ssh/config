    Hostname glepage.com
    User uc
    Port 223
    IdentityFile ~/.ssh/rsa_gaetan

# Server
Host server
    HostName glepage.com
    IdentityFile ~/.ssh/rsa_gaetan

Host backup
    HostName cordineaux.glepage.com
    IdentityFile ~/.ssh/rsa_gaetan

Host desktop
    Hostname glepage.com
    User gaetan
    Port 222

# Router (OpenWRT)
Host router
    Hostname 192.168.1.1
    User root

Host oneplus
    Hostname 10.10.10.4
    Port 2222

