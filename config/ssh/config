Host *.ciment
  User lepageg-ext
  ProxyCommand ssh -q lepageg-ext@access-gricad.univ-grenoble-alpes.fr "nc -w 60 `basename %h .ciment` %p"

Host cargo
  Hostname cargo.univ-grenoble-alpes.fr
  User lepageg-ext


