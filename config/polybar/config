###########
# Spotify #
###########
[module/spotify]
type = custom/script
interval = 1
click-left = playerctl -p spotify play-pause
click-right = bspc desktop -f 9
format-prefix = " "
format = <label>
exec = python ~/.config/polybar/spotify.py -f '{artist} ~ {song}' -t 200
format-underline = ${colors.underline}



